<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>hungry hub</title>
    <link rel="stylesheet" href="css/style-admin.css">
    <link rel="stylesheet"
        href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@48,400,0,0" />
</head>

<body>
    <div class="container">
        <aside>
            <div class="nav">
                <div class="top">
                    <a href="/"><img class="img-logo" src="img/logo.png" alt=""></a>

                    <div class="title">Hungry
                        <span>Hub</span>
                    </div>
                    <div class="close-btn"><span class="material-symbols-outlined">close</span></div>
                </div>
                <div class="sideitem">
                    <a href="/admin" class="active">
                        <span class="material-symbols-outlined"> home</span>
                        <span class="sidebar_title">Restaurants</span>

                    </a>
                    <a href="/orders-admin">
                        <span class="material-symbols-outlined"> local_dining</span>
                        <span class="sidebar_title">Orders</span>

                    </a>

                    <a onclick="logout()">
                        <span class="material-symbols-outlined">logout</span>
                        <span class="sidebar_title">Log Out</span>

                    </a>
                </div>



            </div>

        </aside>
        <!----------end of side bar-->
        <div class="main">
            <div class="section">
                <div class="restaurants">
                    <div>
                        <span class="material-symbols-outlined">restaurant</span>
                        <h1>all restaurants nearby</h1>
                    </div>

                </div>
                <div class="restaurant">
                    {{#each detail.rest}}
                    <div class="xx">
                        <a href="{{this.restUrl}}-admin">
                            <div class="info">
                                <div class="pics">
                                    <img src="{{this.restImg}}">
                                </div>
                                <div class="img-name">
                                    <h1>{{this.restName}}</h1><span>{{this.restDesc}}</span>
                                </div>
                            </div>
                        </a>
                    </div>
                    {{/each}}



                </div>
            </div>

        </div>
        <!----------end of main-->
        <div class="lside">
            <div class="menu">
                <span class="material-symbols-outlined">menu</span>
            </div>
            <div class="theme">
                <div class="mode">
                    <span class=" active material-symbols-outlined ">light_mode</span>
                    <span class="  material-symbols-outlined">dark_mode</span>

                </div>


                <div class="profile">
                    <h2>Hey,</h2>
                    <h3>Sam</h3>
                    <img class="ppic" src="img/profile.jpg">
                </div>

            </div>
        </div>
    </div>

</body>
<script src="js/index-admin.js"></script>

</html>